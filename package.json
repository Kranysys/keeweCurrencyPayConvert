{
  "name": "keeweCurrencyPayConvert",
  "version": "1.0.0",
  "author": "Nicolas BAPTISTA",
  "description": "Application de Paiement et Conversion de Devise",
  "directories": {
    "doc": "docs"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "references": [
    {
      "path": "packages/domain"
    },
    {
      "path": "packages/lib"
    }
  ],
  "scripts": {
    "generate:version": "./scripts/generate_version.sh",
    "start:domain": "yarn workspace @keeweCurrencyPayConvert/domain start:dev",
    "start:lib": "yarn workspace @keeweCurrencyPayConvert/lib start:dev",
    "start:client": "yarn workspace @keeweCurrencyPayConvert/client start",
    "start:server": "yarn workspace @keeweCurrencyPayConvert/server start",
    "start:common": "(yarn start:domain & yarn start:lib & yarn start:client & yarn start:server)",
    "build:domain": "yarn workspace @keeweCurrencyPayConvert/domain build",
    "build:lib": "yarn workspace @keeweCurrencyPayConvert/lib build",
    "build:client": "yarn workspace @keeweCurrencyPayConvert/client build",
    "build:server": "yarn workspace @keeweCurrencyPayConvert/server build",
    "build:common": "(yarn build:domain && yarn build:lib && yarn build:client && yarn build:server)",
    "lint": "yarn workspaces run lint"
  }
}
